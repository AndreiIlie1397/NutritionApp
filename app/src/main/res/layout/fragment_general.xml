<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"/>

    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/progressBar1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar1"
        android:background="@drawable/circle_shape1"
        style="?android:attr/progressBarStyleHorizontal" />
    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/progressBar2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar2"
        android:background="@drawable/circle_shape2"
        style="?android:attr/progressBarStyleHorizontal" />
    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/progressBar3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar3"
        android:background="@drawable/circle_shape3"
        style="?android:attr/progressBarStyleHorizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/relative1">
    <TextView
        android:id="@+id/calorii_consumate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="0 "
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" kcal /"
        android:textSize="26sp"
        android:layout_toRightOf="@id/calorii_consumate"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:layout_below="@+id/relative1"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/calorii_necesare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="total "
        android:textSize="26sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" kcal "
        android:textSize="26sp"
        android:layout_toRightOf="@id/calorii_necesare"/>
    </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittxt_circle_bg"
        android:padding="10dp"
        android:text="Adauga alimente consumate"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/progressBar"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/relative8">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/relative4"
        android:layout_marginRight="15dp">

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:progress="100"
            android:progressDrawable="@color/kCal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kcal"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressBar4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/kcal"
            android:layout_below="@+id/progressBar4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalkcal"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/kcal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kcalorii"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/totalkcal"/>
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative5"
        android:layout_toRightOf="@+id/relative4"
        android:layout_marginRight="15dp">

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:progress="100"
            android:progressDrawable="@color/carbohidrati" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carbohidrati"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressBar5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressBar5"
            android:layout_toRightOf="@+id/carbohidrati"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalcarbohidrati"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/carbohidrati"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carbohidrati"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/totalcarbohidrati"/>
    </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative6"
            android:layout_toRightOf="@+id/relative5"
            android:layout_marginRight="15dp">

            <ProgressBar
                android:id="@+id/progressBar6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:progress="100"
                android:progressDrawable="@color/grasimi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grasimi"
                android:text="0"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progressBar6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progressBar6"
                android:layout_toRightOf="@+id/grasimi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalgrasimi"
                android:text="0"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/grasimi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grasimi"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/totalgrasimi"/>
        </RelativeLayout>





        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative7"
            android:layout_toRightOf="@+id/relative6">

            <ProgressBar
                android:id="@+id/progressBar7"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:progress="100"
                android:progressDrawable="@color/proteine" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proteine"
                android:text="0"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progressBar7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progressBar7"
                android:layout_toRightOf="@+id/proteine"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalproteine"
                android:text="0"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/proteine"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="proteine"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/totalproteine"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
